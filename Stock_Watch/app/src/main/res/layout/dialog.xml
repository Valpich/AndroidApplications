<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/enter_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewlist"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:padding="6dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:id="@+id/textEditSymbol"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewlist"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewlist"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        android:hint="@string/enter_a_symbol"
        android:textAlignment="center"
        android:textSize="20sp"
        android:inputType="textCapCharacters" />

</android.support.constraint.ConstraintLayout>