<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note_pad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iit.valentinpichavant.assignement2.NotePadActivity"
    android:scrollIndicators="right"
    android:scrollbars="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <TextView
        android:text="@string/last_edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="LastEdit"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textdate"
        android:id="@+id/textViewDate"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="text|textMultiLine"
        android:text="@string/note"
        android:ems="10"
        android:id="@+id/editTextNote"
        tools:ignore="LabelFor"
        android:scrollbars="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewDate"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollIndicators="right"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:selectAllOnFocus="false"
        android:gravity="top" />
</android.support.constraint.ConstraintLayout>
